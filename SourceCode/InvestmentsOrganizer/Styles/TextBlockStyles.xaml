<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="TextBlockBase" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Dosis}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    
    <Style TargetType="TextBlock" x:Key="MenuText" BasedOn="{StaticResource TextBlockBase}">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="LightGray"/>
    </Style>
    
    <Style x:Key="SecondaryText" TargetType="TextBlock" BasedOn="{StaticResource TextBlockBase}">
        <Style.Setters>
            <Setter Property="Foreground" Value="LightGray" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="IsHitTestVisible" Value="False" />
        </Style.Setters>
    </Style>
    
    <Style x:Key="TextBoxTip" TargetType="TextBlock" BasedOn="{StaticResource TextBlockBase}">
        <Style.Setters>
            <Setter Property="Foreground" Value="{StaticResource UnreachableText}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
        </Style.Setters>
    </Style>

</ResourceDictionary>