<UserControl x:Class="InvestmentsOrganizer.MVVM.Views.Deposit.AddDepositView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="530" d:DesignWidth="800">
    <Grid Background="{StaticResource OverviewBackground}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <!-- <Border Grid.Row="0" BorderBrush="{StaticResource BorderLine}" -->
        <!--         BorderThickness="0,0,0,1" -->
        <!--         Margin="0,0,0,10"> -->
            <TextBlock Text="Create new deposit"
                       Style="{StaticResource TextBlockBase}"
                       FontSize="35"
                       FontWeight="Light"/>
        <!-- </Border> -->
       
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel>
                <TextBlock Text="Name" 
                           Style="{StaticResource SecondaryText}" Margin="0,0,0,5"/>
                <TextBox Tag="Enter deposit name" 
                         Style="{StaticResource TextInputBox}"/>
                <Label Content="Name must be provided" 
                       Style="{StaticResource LabelError}" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            </StackPanel>

        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Style="{StaticResource SecondaryText}"
                           Text="dsdsds" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>