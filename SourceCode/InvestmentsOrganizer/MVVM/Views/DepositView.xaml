<UserControl x:Class="InvestmentsOrganizer.MVVM.Views.DepositView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:InvestmentsOrganizer.MVVM.Views"
             mc:Ignorable="d"
             d:DesignHeight="540" d:DesignWidth="1000"
             Background="#2F115B">
    <Grid>
        <Grid.Resources>
            <Style BasedOn = "{StaticResource ButtonBaseStyle}" 
                   TargetType = "Button" 
                   x:Key=""></Style>
            
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="7.5*"/>
        </Grid.ColumnDefinitions>
        <Grid Column="0"
              Background="{StaticResource NavigationBackground}">
            <StackPanel Grid.Column="0" Margin="0,40,0,0">
                <Button Height="40" Content="Overview"/>
                <Button Height="40" Content="Add Deposit"/>
                <Button Height="40" Content="Manage Deposits"/>
            </StackPanel>
        </Grid>
        

        
    </Grid>
</UserControl>
